<style>
  header {
    background: #050a1f;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: space-between;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .logo {
    font-size: 1.5rem;
    font-weight: bold;
    color: #007aff;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .nav-item {
    color: #fff;
    text-decoration: none;
    font-size: 0.95rem;
    transition: color 0.2s ease;
    display: flex;
    align-items: center;
    position: relative;
  }

  .nav-item:hover {
    color: #007aff;
  }

  .nav-icon {
    display: none;
    font-size: 1.2rem;
    color: #fff;
  }

  .nav-label {
    display: inline;
    margin-left: 0.4rem;
  }

  .notification-badge {
    position: absolute;
    top: -4px;
    right: -6px;
    background-color: red;
    color: white;
    font-size: 0.65rem;
    padding: 2px 5px;
    border-radius: 999px;
    line-height: 1;
    font-weight: bold;
  }

  .profile-container {
    position: relative;
    cursor: pointer;
  }

  .profile-pic {
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: #ccc url('/path-to-placeholder.jpg') center/cover no-repeat;
    border: 2px solid #007aff;
  }

  .dropdown {
    position: absolute;
    top: 48px;
    right: 0;
    background: #1a1f38;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    width: 140px;
    box-shadow: 0 8px 20px rgba(0,0,0,0.4);
    display: none;
    flex-direction: column;
    z-index: 1000;
  }

  .dropdown a {
    padding: 0.75rem 1rem;
    color: #fff;
    text-decoration: none;
    font-size: 0.9rem;
    transition: background 0.2s;
  }

  .dropdown a:hover {
    background: rgba(255, 255, 255, 0.05);
  }

  .profile-container.active .dropdown {
    display: flex;
  }

  @media (max-width: 600px) {
    .nav-label {
      display: none;
    }

    .nav-icon {
      display: inline;
    }

    .nav-links {
      gap: 1rem;
    }
  }
</style>

<header>
  <div class="logo">TETRA</div>
  <div class="nav-links">
    <a href="/charts" class="nav-item">
      <span class="nav-icon">ðŸ“Š</span>
      <span class="nav-label">Charts</span>
    </a>
    <a href="/messages" class="nav-item">
      <span class="nav-icon">ðŸ’¬</span>
      <span class="nav-label">Messages</span>
      <span class="notification-badge">2</span>
    </a>
    <a href="/notifications" class="nav-item">
      <span class="nav-icon">ðŸ””</span>
      <span class="nav-label">Notifications</span>
      <span class="notification-badge">3</span>
    </a>
    <div class="profile-container" id="profileDropdown">
      <div class="profile-pic"></div>
      <div class="dropdown">
        <a href="/profile">See Profile</a>
        <a href="/logout">Logout</a>
      </div>
    </div>
  </div>
</header>

<script>
  const profile = document.getElementById('profileDropdown');

  profile.addEventListener('click', () => {
    profile.classList.toggle('active');
  });

  document.addEventListener('click', (e) => {
    if (!profile.contains(e.target)) {
      profile.classList.remove('active');
    }
  });
</script>
