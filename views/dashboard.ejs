<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Music Dashboard | TETRA</title>

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@fortawesome/fontawesome-free@6.5.0/css/all.min.css" />



  <style>
    body {
  margin: 0;
  font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  background-color: #0a0f2c;
  color: white;
}



.newsfeed {
  padding: 2rem;
  max-width: 700px;
  margin: 0 auto;
}

.post {
  background: rgba(255, 255, 255, 0.05);
  border: 1px solid rgba(255, 255, 255, 0.1);
  border-radius: 15px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  backdrop-filter: blur(10px);
  box-shadow: 0 4px 20px rgba(0, 0, 0, 0.3);
}

.post img {
  width: 100%;
  border-radius: 10px;
  margin-top: 1rem;
}

.post h3 {
  margin: 0 0 0.5rem;
  font-size: 1.2rem;
  color: #ffffff;
}

.post p {
  font-size: 0.95rem;
  color: rgba(255, 255, 255, 0.85);
}

.timestamp {
  font-size: 0.8rem;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 0.5rem;
}



/* âœ… Responsive Tweaks */
@media screen and (max-width: 600px) {
  .newsfeed {
    padding: 1rem;
  }

  .post {
    padding: 1rem;
  }

  .post h3 {
    font-size: 1rem;
  }

  .post p {
    font-size: 0.85rem;
  }

  .timestamp {
    font-size: 0.7rem;
  }

  .floating-plus {
    width: 50px;
    height: 50px;
    font-size: 1.8rem;
    bottom: 65px;
    right: 20px;
  }

  .floating-plus.up {
    bottom: 420px;
  }

  .album-art {
    width: 90px;
    height: 90px;
  }

  .track-details {
    font-size: 0.95rem;
  }

  .artist {
    font-size: 0.75rem;
  }

  .expanded-controls button {
    font-size: 1.4rem;
  }

  .music-drawer.expanded {
    height: 410px;
  }
}

.media-wrapper {
  position: relative;
  display: inline-block;
  width: 100%;
  overflow: hidden;
}

.fancy-loader {
  position: absolute;
  top: 50%;
  left: 50%;
  width: 40px;
  height: 40px;
  margin: -20px;
  border-radius: 50%;
  background: rgba(0, 122, 255, 0.6);
  animation: pulse 1s infinite ease-in-out;
  z-index: 2;
}

.media-wrapper.loaded .fancy-loader {
  display: none;
}

@keyframes pulse {
  0% { transform: scale(0.95); opacity: 0.7; }
  50% { transform: scale(1.05); opacity: 1; }
  100% { transform: scale(0.95); opacity: 0.7; }
}

.post-header {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  margin-bottom: 1rem;
}

.post-profile-pic {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  background: #ccc url('/path-to-placeholder.jpg') center/cover no-repeat;
  border: 2px solid #007aff;
}

.post-username {
  font-size: 1.1rem;
  font-weight: 600;
  color: #fff;
}

.media-carousel {
  position: relative;
  width: 100%;
  overflow: hidden;
}

.media-track {
  display: flex;
  transition: transform 0.3s ease;
}

.media-item {
  min-width: 100%;
  flex-shrink: 0;
  padding-right: 0.5rem;
}

.media-item img,
.media-item video {
  width: 100%;
  border-radius: 10px;
}

.carousel-btn {
  display: none;
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  background: rgba(0, 0, 0, 0.4);
  border: none;
  color: white;
  font-size: 1.5rem;
  padding: 0.5rem 0.75rem;
  cursor: pointer;
  z-index: 5;
  border-radius: 50%;
}

.carousel-btn.left {
  left: 10px;
}

.carousel-btn.right {
  right: 10px;
}

@media (min-width: 601px) {
  .post:hover .carousel-btn {
    display: block;
  }
}

@media (max-width: 600px) {
  .media-track {
    scroll-snap-type: x mandatory;
    overflow-x: auto;
  }

  .media-item {
    scroll-snap-align: start;
  }
}


.post-actions {
  display: flex;
  justify-content: flex-end;
  gap: 1rem;
  margin-top: 0.75rem;
}

.post-actions button {
  background: none;
  border: none;
  color: rgba(255, 255, 255, 0.7);
  font-size: 1.1rem;
  cursor: pointer;
  transition: color 0.2s ease;
}

.post-actions button:hover {
  color: #ffffff;
}



  </style>
</head>
<body>
  <div class="fixed-header">
    <%- include('partials/console_header') %>
  </div>
  

  <main class="newsfeed">
  <% if (posts.length === 0) { %>
    <div style="text-align: center; margin-top: 3rem; color: rgba(255, 255, 255, 0.6); font-size: 1.1rem;">
      ðŸš« No posts yet. Stay tuned!
    </div>
  <% } else { %>
    <% posts.forEach(post => { %>
  <div class="post">
    <div class="post-header">
  <div class="post-profile-pic"></div>
  <div class="post-username"><%= post.username %></div>
</div>

    <p><%= post.caption %></p>

    <% post.images.forEach(imgUrl => { 
         const filename = imgUrl.split('/').pop(); %>
      <img src="/media/image/<%= filename %>" alt="Post image" />
    <% }) %>

    <% post.tracks.forEach(trackUrl => {
         const filename = trackUrl.split('/').pop(); %>
      <audio controls src="/media/audio/<%= filename %>"></audio>
    <% }) %>

    <% post.videos.forEach(videoUrl => {
         const filename = videoUrl.split('/').pop(); %>
      <video controls src="/media/video/<%= filename %>" width="100%"></video>
    <% }) %>

    <div class="timestamp">Posted <%= post.timeAgo %></div>

    <div class="post-actions">
  <button title="Like"><i class="fas fa-heart"></i></button>
  <button title="Comment"><i class="fas fa-comment"></i></button>
  <button title="Share"><i class="fas fa-share"></i></button>
</div>

  </div>
<% }) %>

  <% } %>
</main>



<div class="fixed-bar">
    <%- include('partials/music_bar') %>
  </div>








</body>
</html>
