<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title><%= artist.name %> | TETRA</title>

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
  <style>
    body {
      margin: 0;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #0a0f2c;
      color: white;
    }

    .artist-header {
      position: relative;
      background-size: cover;
      background-position: center;
      height: 300px;
      display: flex;
      align-items: flex-end;
      padding: 2rem;
    }

    .artist-header .overlay {
      position: absolute;
      inset: 0;
      background: linear-gradient(to top, rgba(10, 15, 44, 0.9), rgba(10, 15, 44, 0));
    }

    .artist-info {
      position: relative;
      z-index: 1;
    }

    .artist-name {
      font-size: 2.5rem;
      font-weight: bold;
    }

    .artist-follow {
      margin-top: 0.5rem;
      font-size: 0.9rem;
      color: rgba(255, 255, 255, 0.7);
    }

    .follow-btn {
      margin-top: 1rem;
      padding: 0.5rem 1rem;
      border-radius: 999px;
      background-color: #1db954;
      color: white;
      border: none;
      cursor: pointer;
      font-size: 0.95rem;
    }

    .section {
      padding: 2rem;
      max-width: 1000px;
      margin: 0 auto;
    }

    .section h2 {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .song-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 0.75rem 0;
      border-bottom: 1px solid rgba(255, 255, 255, 0.05);
    }

    .song-info {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .song-info img {
      width: 50px;
      height: 50px;
      border-radius: 6px;
      object-fit: cover;
    }

    .song-title {
      font-weight: 500;
    }

    .song-actions i {
      margin-left: 1rem;
      cursor: pointer;
      color: rgba(255, 255, 255, 0.8);
    }

    .song-actions i:hover {
      color: #1db954;
    }

    .artist-details {
      font-size: 0.95rem;
      color: rgba(255, 255, 255, 0.75);
      line-height: 1.6;
    }

    @media screen and (max-width: 600px) {
      .artist-name {
        font-size: 2rem;
      }

      .section {
        padding: 1rem;
      }

      .song-info img {
        width: 40px;
        height: 40px;
      }
    }
  </style>
</head>
<body>
  <div class="fixed-header">
    <%- include('partials/console_header') %>
  </div>

  <!-- Artist Branding Header -->
  <div class="artist-header" style="background-image: url('<%= artist.bannerUrl %>')">
    <div class="overlay"></div>
    <div class="artist-info">
      <div class="artist-name"><%= artist.name %></div>
      <div class="artist-follow"><%= artist.followers %> followers</div>
      <button class="follow-btn">Follow</button>
    </div>
  </div>

  <main class="artist-profile">
    <!-- Popular Songs Section -->
    <div class="section">
      <h2>Popular</h2>
      <% artist.songs.forEach(song => { %>
        <div class="song-item">
          <div class="song-info">
            <img src="<%= song.coverUrl %>" alt="Cover">
            <div class="song-title"><%= song.title %></div>
          </div>
          <div class="song-actions">
            <i class="fas fa-play"></i>
            <i class="fas fa-heart"></i>
            <i class="fas fa-ellipsis-h"></i>
          </div>
        </div>
      <% }) %>
    </div>

    <!-- More About the Artist -->
    <div class="section">
      <h2>About</h2>
      <div class="artist-details">
        <%= artist.bio %>
      </div>
    </div>
  </main>

  <div class="fixed-bar">
    <%- include('partials/music_bar') %>
  </div>
</body>
</html>
