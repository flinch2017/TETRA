      25% { transform: translate(-200px, -300px) scale(0.8); opacity: 1; }
      50% { transform: translate(300px, -100px) scale(1.2); opacity: 0.7; }
      75% { transform: translate(-150px, 200px) scale(1); opacity: 1; }
      100% { transform: translate(0, 0) scale(1); opacity: 0.5; }
    }

    .firefly:nth-child(1) { top: 20%; left: 30%; animation-delay: 0s; }
    .firefly:nth-child(2) { top: 60%; left: 70%; animation-delay: 3s; }
    .firefly:nth-child(3) { top: 40%; left: 20%; animation-delay: 6s; }
    .firefly:nth-child(4) { top: 80%; left: 50%; animation-delay: 9s; }
    .firefly:nth-child(5) { top: 30%; left: 80%; animation-delay: 12s; }
    .firefly:nth-child(6) { top: 50%; left: 60%; animation-delay: 15s; }
    .firefly:nth-child(7) { top: 70%; left: 40%; animation-delay: 18s; }
