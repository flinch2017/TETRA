    }

    @keyframes gradientMove {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }

    .firefly {
      position: fixed;
      top: 50%;
      left: 50%;
      width: 6px;
      height: 6px;
      background: #facc15;
      border-radius: 50%;
      box-shadow: 0 0 8px 2px #facc15;
      opacity: 0.8;
      animation: fly 20s linear infinite;
      z-index: -1;
    }

