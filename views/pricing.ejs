<script>
  const plans = {
    basic: 'P-8V563971VF056944ENCJB6QQ', // Replace with actual PayPal Plan ID
    mid: 'P-865905246F849110ENCJB53I',
    pro: 'P-4BJ93315WB274131JNCJBXUQ'
  };

  ['basic', 'mid', 'pro'].forEach(plan => {
    paypal.Buttons({
      style: {
        layout: 'vertical',
        color: 'blue',
        shape: 'pill',
        label: 'subscribe'
      },
      createSubscription: function(data, actions) {
        return actions.subscription.create({
          plan_id: plans[plan]
        });
      },
      onApprove: function(data, actions) {
        // Send subscriptionID to server
        fetch('/pricing/capture-subscription', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({ subscriptionID: data.subscriptionID })
        })
        .then(res => res.json())
        .then(resData => {
          if (resData.success) {
            alert('Subscription successful!');
            // Optionally redirect or update DB/session
          }
        });
      }
    }).render(`#paypal-button-container-${plan}`);
  });
</script>
